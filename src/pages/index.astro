---
import { Image } from "astro:assets";
import Hero from "../components/Hero.astro";
import logo from "../../public/images/logo.jpg";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/images/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
			rel="stylesheet"
		/>

		<title>Astro</title>
	</head>
	<body>
		<!--
Responsive Navbar with Dropdown + Left Side Menu
Colors: --main: #85d9ee; --accent: #f4e3c3
Copy this into an Astro component (src/components/Navbar.astro) or paste directly in a page.
If using .astro, wrap the <script> tag with `client:load` attribute: <script client:load> ... </script>
-->

		<html lang="en">
			<head>
				<meta charset="utf-8" />
				<meta
					name="viewport"
					content="width=device-width, initial-scale=1"
				/>
				<title>Tabemed — Medical Services & Healthcare Solutions</title>

				<meta
					name="description"
					content="Tabemed provides professional medical services, doctors appointments, diagnostics, and healthcare solutions with modern and trusted technology."
				/>

				<meta
					name="keywords"
					content="medical, healthcare, clinic, doctors, hospital, diagnostics, medical services"
				/>

				<meta
					name="viewport"
					content="width=device-width, initial-scale=1"
				/>

				<link rel="canonical" href="https://your-domain.com/" />
				<style>
					:root {
						--main: #80d1ea;
						--accent: #f4e3c3;
						--accent_hover: #f5ddaf;
						--text: #102a43;
						--white: #ffffff;
						--nav-height: 90px;
					}
					* {
						box-sizing: border-box;
					}
					body {
						font-family: "Inter", sans-serif;
						margin: 0;
						color: var(--text);
					}

					/* Navbar */
					.nav-wrap {
						background: linear-gradient(
							90deg,
							var(--main),
							#6fd3e6
						);
						z-index: 30;
					}
					header.navbar {
						height: var(--nav-height);
						display: flex;
						align-items: center;
						justify-content: space-between;
						gap: 1rem;
						padding-left: 1rem;
						width: 90%;
						max-width: 1200px;
						margin: 0 auto;
						position: relative;
					}
					.brand {
						display: flex;
						align-items: center;
						gap: 0.6rem;
						font-weight: 700;
						margin: -2.5rem 0 0 0;
					}
					.brand .logo {
						width: 40px;
						height: 40px;
						border-radius: 8px;
						background: var(--white);
						display: inline-grid;
						place-items: center;
						color: var(--main);
						font-weight: 800;
					}
					.brand .title {
						font-size: 1.05rem;
					}

					nav.main-nav {
						display: flex;
						gap: 1rem;
						align-items: center;
					}
					nav.main-nav a {
						padding: 0.6rem 0.8rem;
						border-radius: 6px;
						color: var(--white);
						text-decoration: none;
						font-weight: 600;
						font-size: 1rem;
					}
					nav.main-nav a:hover {
						background: rgba(255, 255, 255, 0.12);
					}

					/* Dropdown */
					.dropdown {
						position: relative;
					}
					.dropdown > button {
						display: flex;
						align-items: center;
						gap: 0.4rem;
						background: transparent;
						border: 0;
						color: var(--white);
						cursor: pointer;
						padding: 0.6rem 0.8rem;
						border-radius: 6px;
						font-size: 1rem;
						font-weight: 600;
					}
					.dropdown-menu {
						position: absolute;
						left: 0;
						top: 100%;
						min-width: 180px;
						background: var(--main);
						color: var(--text);
						box-shadow: 0 6px 18px rgba(2, 6, 23, 0.12);
						/* border-radius: 8px; */
						padding: 0.4rem;
						margin-top: 1.5rem;
						display: none;
						z-index: 40;
						transition: 1s;
					}
					.dropdown-menu a {
						display: block;
						padding: 0.6rem 0.8rem;
						color: inherit;
						text-decoration: none;
						border-radius: 6px;
					}
					.dropdown-menu a:hover {
						background: var(--accent);
					}
					.dropdown.open .dropdown-menu {
						display: block;
					}

					/* CTA and utilities */
					.nav-actions {
						display: flex;
						gap: 0.6rem;
						align-items: center;
					}
					.btn {
						background: var(--accent);
						color: var(--text);
						/* padding: 0.5rem 0.9rem; */
						padding: 20px 50px;
						border-radius: 8px;
						border: 0;
						font-weight: 700;
						cursor: pointer;
					}
					.btn:hover {
						background-color: var(--accent_hover);
					}

					/* Hamburger - mobile */
					.hamburger {
						display: none;
						background: transparent;
						border: 0;
						font-size: 1.25rem;
						color: var(--white);
						cursor: pointer;
					}

					/* Side menu for small screens */
					.side-menu {
						position: fixed;
						left: 0;
						top: 0;
						height: 100vh;
						width: 280px;
						background: linear-gradient(
							180deg,
							var(--white),
							#fffbf5
						);
						box-shadow: 2px 0 20px rgba(2, 6, 23, 0.12);
						transform: translateX(-110%);
						transition: transform 0.32s ease;
						z-index: 60;
						padding: 1rem;
					}
					.side-menu.open {
						transform: translateX(0);
					}
					.side-top {
						display: flex;
						align-items: center;
						justify-content: space-between;
						margin-bottom: 1rem;
					}
					.side-links {
						display: flex;
						flex-direction: column;
						gap: 0.2rem;
					}
					.side-links a {
						padding: 0.65rem 0.8rem;
						border-radius: 8px;
						text-decoration: none;
						color: var(--text);
						font-weight: 600;
					}
					.side-links a:hover {
						background: var(--accent);
					}

					/* overlay when side menu open */
					.overlay {
						position: fixed;
						inset: 0;
						background: rgba(2, 6, 23, 0.36);
						opacity: 0;
						pointer-events: none;
						transition: opacity 0.2s;
						z-index: 50;
					}
					.overlay.show {
						opacity: 1;
						pointer-events: auto;
					}

					/* Responsive behavior */
					@media (max-width: 900px) {
						nav.main-nav {
							display: none;
						}
						.hamburger {
							display: inline-block;
						}
					}

					@media (min-width: 901px) {
						.side-menu {
							display: none;
						}
						.overlay {
							display: none;
						}
					}

					/* small styling for demo page */
					main {
						/*padding: 2rem;*/
					}
					.hero {
						padding: 2rem;
						background: linear-gradient(
							180deg,
							var(--accent),
							#fff9ee
						);
						border-radius: 12px;
					}
				</style>
			</head>
			<body>
				<div class="nav-wrap">
					<header class="navbar">
						<div class="brand">
							<div class="logo">
								<Image
									src={logo}
									alt="Company Logo"
									height={80}
								/>
							</div>
							<div class="title" style="color:#105975;">
								<!-- Tabemed -->
							</div>
						</div>

						<button
							class="hamburger"
							aria-label="Open menu"
							id="hamburger">☰</button
						>

						<nav class="main-nav" aria-label="Main navigation">
							<a href="#">Home</a>
							<a href="#">About</a>
							<div class="dropdown" id="servicesDropdown">
								<button
									aria-haspopup="true"
									aria-expanded="false">Services ▾</button
								>
								<div class="dropdown-menu" role="menu">
									<a href="#">Consulting</a>
									<a href="#">Development</a>
									<a href="#">Design</a>
								</div>
							</div>
							<a href="#">Blog</a>
							<a href="#">Contact</a>
						</nav>

						<div class="nav-actions">
							<button class="btn">Get Started</button>
						</div>
					</header>
				</div>

				<!-- Side menu (mobile) -->
				<aside class="side-menu" id="sideMenu" aria-hidden="true">
					<div class="side-top">
						<div style="display:flex;align-items:center;gap:.6rem">
							<div class="logo">C</div><strong>Company</strong>
						</div>
						<button aria-label="Close menu" id="closeSide">✕</button
						>
					</div>

					<nav class="side-links" aria-label="Mobile navigation">
						<a href="#">Home</a>
						<a href="#">About</a>
						<details>
							<summary
								style="padding:.65rem .8rem;border-radius:8px;cursor:pointer;font-weight:600"
								>Services</summary
							>
							<div
								style="padding-left:.6rem;display:flex;flex-direction:column;gap:.2rem;margin-top:.4rem"
							>
								<a href="#">Consulting</a>
								<a href="#">Development</a>
								<a href="#">Design</a>
							</div>
						</details>
						<a href="#">Blog</a>
						<a href="#">Contact</a>
					</nav>

					<div style="margin-top:auto;padding-top:1rem">
						<button class="btn" style="width:100%"
							>Get Started</button
						>
					</div>
				</aside>

				<div class="overlay" id="overlay"></div>

				<main>
					<Hero />
				</main>

				<script>
					// Dropdown toggle
					const dropdown =
						document.getElementById("servicesDropdown");
					const ddButton = dropdown?.querySelector("button");
					ddButton?.addEventListener("click", (e) => {
						const open = dropdown?.classList.toggle("open");
						ddButton?.setAttribute(
							"aria-expanded",
							String(Boolean(open)),
						);
					});

					// Side menu toggle
					const hamburger = document.getElementById("hamburger");
					const sideMenu = document.getElementById("sideMenu");
					const closeSide = document.getElementById("closeSide");
					const overlay = document.getElementById("overlay");

					function openSide() {
						sideMenu?.classList.add("open");
						overlay?.classList.add("show");
						sideMenu?.setAttribute("aria-hidden", "false");
					}
					function closeSideMenu() {
						sideMenu?.classList.remove("open");
						overlay?.classList.remove("show");
						sideMenu?.setAttribute("aria-hidden", "true");
					}

					hamburger?.addEventListener("click", openSide);
					closeSide?.addEventListener("click", closeSideMenu);
					overlay?.addEventListener("click", closeSideMenu);

					// close dropdown on outside click
					document.addEventListener("click", (e) => {
						if (
							!dropdown ||
							!(e.target instanceof Node) ||
							!dropdown.contains(e.target)
						) {
							dropdown?.classList.remove("open");
							ddButton?.setAttribute("aria-expanded", "false");
						}
					});

					// Keyboard accessibility for Esc to close side menu and dropdown
					document.addEventListener("keydown", (e) => {
						if (e.key === "Escape") {
							closeSideMenu();
							dropdown?.classList.remove("open");
							ddButton?.setAttribute("aria-expanded", "false");
						}
					});
				</script>
			</body>
		</html>
	</body>
</html>
