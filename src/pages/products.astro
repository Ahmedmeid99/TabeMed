<style>
    .products-section {
        text-align: center;
    }

    .products-title {
        font-size: 2.4rem;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 2rem;
    }

    /* Product grid */
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 2rem;
        margin-bottom: 2.5rem;
    }

    /* STORE BUTTON */
    .store-btn {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.9rem 2rem;
        background: var(--main);
        color: var(--white);
        border-radius: 8px;
        text-decoration: none;
        font-weight: 700;
        font-size: 1.1rem;
        transition: 0.3s;
    }

    .store-btn:hover {
        background: var(--main-hover);
    }
</style>
<BaseLayout title="Contact Us">
    <Section
        title="Our Products"
        subTitle="Advanced prosthetic and orthotic products for daily mobility."
    >
        <div class="products-section">
            <!-- Product Cards -->
            <div class="products-grid">
                {
                    products.map((p) => (
                        <Product
                            title={p.title}
                            desc={p.desc}
                            price={p.price}
                            image={p.image}
                        />
                    ))
                }
            </div>

