---
import Product from "../ui/Product.astro";
import Section from "../ui/Section.astro";

/* PRODUCT DATA â€“ Using your images 01, 02, 03 */
const products = [
    {
        title: "Digital Thermometer",
        image: "/images/products/01.jpg",
        desc: "Fast and accurate digital thermometer suitable for all ages.",
        price: "$24.99",
    },
    {
        title: "Blood Pressure Monitor",
        image: "/images/products/02.jpg",
        desc: "Accurate and easy-to-use home blood pressure monitor.",
        price: "$69.99",
    },
    {
        title: "Pulse Oximeter",
        image: "/images/products/03.jpg",
        desc: "Measures blood oxygen level and heart rate instantly.",
        price: "$34.99",
    },
];
---

<style>
    .products-section {
        text-align: center;
    }

    .products-title {
        font-size: 2.4rem;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 2rem;
    }

    /* Product grid */
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 2rem;
        margin-bottom: 2.5rem;
    }

    /* STORE BUTTON */
    .store-btn {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.9rem 2rem;
        background: var(--main);
        color: var(--white);
        border-radius: 8px;
        text-decoration: none;
        transition: 0.3s;
        border: none;
        border-bottom: 5px solid var(--main-hover);
        border-right: 3px solid var(--main-hover);
    }
    .store-btn span {
        font-weight: 700;
        font-size: 1rem;
    }
    .store-btn i {
        font-size: 12px;
        margin-left: 8px;
        transition: 0.5s;
    }

    .store-btn:hover i {
        transform: translateX(7px);
        transition: 0.3s;
    }
</style>

<Section
    title="Our Products"
    subTitle="Advanced prosthetic and orthotic products for daily mobility."
>
    <div class="products-section" id="products">
        <!-- Product Cards -->
        <div class="products-grid">
            {
                products.map((p) => (
                    <Product
                        title={p.title}
                        desc={p.desc}
                        price={p.price}
                        image={p.image}
                    />
                ))
            }
        </div>

        <!-- GO TO STORE BUTTON -->
        <a href="/products" class="store-btn"
            ><span>Go to Store</span>
            <i class="fa-solid fa-arrow-right-long"></i>{" "}</a
        >
    </div>
</Section>
