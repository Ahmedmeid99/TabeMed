---
import Section from "../ui/Section.astro";
import Info from "./Info.astro";
---

<style>
    /* Wrapper holds the whole section */
    .sticky-section {
        position: relative;
        width: 100%;
        /* height: 200vh;  */
        overflow: visible;
    }

    /* Sticky image container */
    .sticky-image {
        position: sticky;
        top: 0;
        height: 100vh; /* full-screen sticky */
        background: linear-gradient(#80d1eadd, #80d1ea9d),
            url("../../public/images/01.jpg");
        background-size: cover;
        background-position: center;
        background-attachment: fixed; /* smooth professional parallax */
        padding: 1px;
        z-index: 1;
    }

    /* Optional title over sticky image */
    .sticky-image h1 {
        color: white;
        font-size: 3rem;
        font-weight: 800;
        text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        opacity: 0;
        transform: translateY(40px);
        animation: fadeUp 1s ease-out forwards;
    }

    @keyframes fadeUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Scrolling text layer */
    .scroll-text {
        position: absolute;
        top: 100vh; /* starts immediately after the sticky image */
        width: 100%;
        z-index: 3;
        background: white;
        padding: 4rem 1.5rem;
        box-shadow: 0 -10px 30px rgba(0, 0, 0, 0.1);
    }

    .scroll-text h2 {
        font-size: 2rem;
        font-weight: 700;
        color: #105975;
    }

    .scroll-text p {
        font-size: 1.1rem;
        line-height: 1.8rem;
        margin-bottom: 2rem;
        color: #333;
    }
</style>

<!-- Section Wrapper -->
