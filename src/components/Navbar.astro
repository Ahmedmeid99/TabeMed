---
import { Image } from "astro:assets";
import logo from "../../public/images/logo.jpg";
---

<style>
    :root {
        --main: #80d1ea;
        --accent: #f4e3c3;
        --accent_hover: #f5ddaf;
        --text: #102a43;
        --white: #ffffff;
        --nav-height: 90px;
    }
    * {
        box-sizing: border-box;
    }
    .nav-wrap {
        background: linear-gradient(90deg, var(--main), #6fd3e6);
        z-index: 30;
    }
    header.navbar {
        height: var(--nav-height);
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        padding-left: 1rem;
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
    }
    .brand {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        font-weight: 700;
    }
    .brand .logo {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        background: var(--white);
        display: inline-grid;
        place-items: center;
        color: var(--main);
        font-weight: 800;
    }
    .brand .title {
        font-size: 1.05rem;
    }
    nav.main-nav {
        display: flex;
        gap: 1rem;
        align-items: center;
    }
    nav.main-nav a {
        padding: 0.6rem 0.8rem;
        border-radius: 6px;
        color: var(--white);
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
    }
    nav.main-nav a:hover {
        background: rgba(255, 255, 255, 0.12);
    }
    .dropdown {
        position: relative;
    }
    .dropdown > button {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        background: transparent;
        border: 0;
        color: var(--white);
        cursor: pointer;
        padding: 0.6rem 0.8rem;
        border-radius: 6px;
        font-size: 1rem;
        font-weight: 600;
    }
    .dropdown-menu {
        position: absolute;
        left: 0;
        top: 100%;
        min-width: 180px;
        background: var(--main);
        color: var(--text);
        box-shadow: 0 6px 18px rgba(2, 6, 23, 0.12);
        padding: 0.4rem;
        margin-top: 1.5rem;
        display: none;
        z-index: 40;
    }
    .dropdown-menu a {
        display: block;
        padding: 0.6rem 0.8rem;
        color: inherit;
        text-decoration: none;
        border-radius: 6px;
    }
    .dropdown-menu a:hover {
        background: var(--accent);
    }
    .dropdown.open .dropdown-menu {
        display: block;
    }
    .nav-actions {
        display: flex;
        gap: 0.6rem;
        align-items: center;
    }
    .btn {
        background: var(--accent);
        color: var(--text);
        padding: 20px 50px;
        border-radius: 8px;
        border: 0;
        font-weight: 700;
        cursor: pointer;
    }
    .btn:hover {
        background-color: var(--accent_hover);
    }
    .hamburger {
        display: none;
        background: transparent;
        border: 0;
        font-size: 1.25rem;
        color: var(--white);
        cursor: pointer;
    }
    @media (max-width: 900px) {
        nav.main-nav {
            display: none;
        }
        .hamburger {
            display: inline-block;
        }
    }
</style>

<div class="nav-wrap">
    <header class="navbar">
        <div class="brand">
            <div class="logo">
                <Image src={logo} alt="Company Logo" height={40} />
            </div>
            <div class="title">Tabemed</div>
        </div>
        <button class="hamburger" id="hamburger" aria-label="Open menu"
            >☰</button
        >
        <nav class="main-nav">
            <a href="#">Home</a>
            <a href="#">About</a>
            <div class="dropdown" id="servicesDropdown">
                <button aria-haspopup="true" aria-expanded="false"
                    >Services ▾</button
                >
                <div class="dropdown-menu">
                    <a href="#">Consulting</a>
                    <a href="#">Development</a>
                    <a href="#">Design</a>
                </div>
            </div>
            <a href="#">Blog</a>
            <a href="#">Contact</a>
        </nav>
        <div class="nav-actions">
            <button class="btn">Get Started</button>
        </div>
    </header>
</div>

<script is:inline>
    const dropdown = document.getElementById("servicesDropdown");
    const ddButton = dropdown?.querySelector("button");
    ddButton?.addEventListener("click", () => {
        const open = dropdown?.classList.toggle("open");
        ddButton?.setAttribute("aria-expanded", String(Boolean(open)));
    });
    document.addEventListener("click", (e) => {
        if (
            !dropdown ||
            !(e.target instanceof Node) ||
            !dropdown.contains(e.target)
        ) {
            dropdown?.classList.remove("open");
            ddButton?.setAttribute("aria-expanded", "false");
        }
    });
</script>
