---
import Section from "../ui/Section.astro";

/* No props needed, pure static section â€” you can convert to component later */
---

<style>
    .features-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .box {
        background: #fff;
        padding: 2rem;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 4px 12px rgba(0, 0, 0, 5%);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        cursor: default;
        position: relative;
        overflow: hidden;
    }

    .box:hover {
        transform: translateY(-8px);
        box-shadow: 0 30px 12px rgba(0, 0, 0, 5%);
    }

    /* Hover background overlay */
    .box::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 0%;
        background: var(--main, #0088a9);
        z-index: -1;
        transition: 0.4s;
    }

    /* .box:hover::after {
        height: 100%;
    } */

    .box-icon {
        font-size: 2rem;
        color: var(--main, #0088a9);
        margin-bottom: 0.5rem;
        transition:
            color 0.3s,
            transform 0.3s;
    }

    /* .box:hover .box-icon {
        color: #fff;
        transform: scale(1.2);
    } */

    .num {
        font-size: 1.5rem;
        font-weight: bold;
        color: #105975;
        margin-bottom: 0.3rem;
    }

    /* .box:hover .num {
        color: #fff;
    } */

    .slug {
        font-size: 1rem;
        color: var(--text-light);

        transition: color 0.3s;
    }

    /* .box:hover .slug {
        color: #f1f1f1;
    } */

    /* Responsive */
    @media (max-width: 900px) {
        .features-container {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 600px) {
        .features-container {
            grid-template-columns: 1fr;
        }
    }
</style>

<Section>
    <div class="features-container" id="features">
        <div class="box">
            <div class="box-icon">
                <i class="fa-solid fa-person-walking"></i>
            </div>
            <div class="num">2,500+</div>
            <div class="slug">Mobility Restored</div>
        </div>

        <div class="box">
            <div class="box-icon">
                <i class="fa-solid fa-toolbox"></i>
            </div>
            <div class="num">900+</div>
            <div class="slug">Prosthetics & Orthotics Delivered</div>
        </div>

        <div class="box">
            <div class="box-icon">
                <i class="fa-solid fa-microscope"></i>
            </div>
            <div class="num">1,200+</div>
            <div class="slug">Clinical Assessments</div>
        </div>

        <div class="box">
            <div class="box-icon">
                <i class="fa-solid fa-heart"></i>
            </div>
            <div class="num">98%</div>
            <div class="slug">Patient Satisfaction</div>
        </div>
    </div>
</Section>
