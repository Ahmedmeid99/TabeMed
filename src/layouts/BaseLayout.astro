---
import "../styles/global.css";
import Navbar from "./Navbar.astro";
import Footer from "./Footer.astro";
import ScrollToTop from "../lib/ScrollToTop .astro";
import Loader from "../lib/Loader.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>{title} — Tabemed</title>

        <!-- Favicon -->
        <link rel="icon" href="/images/favicon.ico" type="image/png" />

        <!-- ===================== SEO DESCRIPTION ====================== -->
        <meta
            name="description"
            content="Tabemed provides advanced prosthetics, orthotics, and mobility care based on Egyptian medical heritage. Precision fittings, gait analysis, comfort-focused devices, and follow-up support for amputees and movement-challenged individuals."
        />

        <!-- ===================== SEO KEYWORDS ====================== -->
        <meta
            name="keywords"
            content="
            prosthetics,
            orthotics,
            mobility devices,
            artificial limbs,
            gait analysis,
            rehabilitation,
            medical engineering,
            prosthetic clinic Egypt,
            orthotic clinic Cairo,
            assistive technology,
            mobility support,
            الأطراف الصناعية,
            الجبائر الطبية,
            أجهزة الحركة,
            تحليل المشي,
            مركز الأطراف الصناعية,
            مركز الجبائر,
            تأهيل حركي,
            أبحاث الحركة,
            رعاية الأطراف
        "
        />

        <!-- Canonical -->
        <link rel="canonical" href="https://tabemed.com/" />

        <!-- ===================== OpenGraph (Social Sharing) ====================== -->
        <meta property="og:title" content={`${title} — Tabemed`} />
        <meta
            property="og:description"
            content="Advanced prosthetic & orthotic solutions engineered for comfort, stability, and human dignity. Inspired by Egyptian medical heritage."
        />
        <meta property="og:image" content="/images/favicon.ico" />
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Tabemed" />
        <meta property="og:locale" content="en_US" />
        <meta property="og:locale:alternate" content="ar_AR" />

        <!-- ===================== Google Fonts ====================== -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400;500;600;700;800&family=Noto+Sans+Arabic:wght@300;400;500;600;700;800&display=swap"
            rel="stylesheet"
        />
    </head>

    <body>
        <!-- Loader Screen -->
        <Loader />
        <!-- ScrollToTop Button -->
        <ScrollToTop />

        <Navbar />
        <main class="main">
            <slot />
        </main>

        <Footer />
        <script>
            // Scroll to top on arrow click
            const arrowTop = document.querySelector(".arrow.top");
            arrowTop?.addEventListener("click", () => {
                window.scrollTo({ top: 0, behavior: "smooth" });
            });
        </script>
        <!-- Bootstrap JS (for slider, accordion, etc.) -->
        <!-- <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        ></script> -->
    </body>
</html>
